<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.death.remoteadb.About">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="45dp"
        android:id="@+id/about"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="A simple utility that removes the hassel of wires for every developer/hacker it will turn on the feature of 'Remote Adb', To use this app its compulsory to have Rooted Android Devices. If you don't know what root is, then you don't have rooted device.If anything goes wrong, like a bricked device or world war because of your action I will not hold any responsibility. "
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/aboucontent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Made with in India"
        android:id="@+id/slogan"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
